size = 5
num = 1
i = 1
while i <= size {
    j = size
    while j > i {
        echo " "
        j = j - 1
    }
    k = 0
    while k < i*2-1 {
        echo num
        num = num + 1
        k = k + 1
    }
    num = 1
    echo "\n"
    i = i + 1
} 
i = 1
while i <= size -1  {
    j = 0
    while j < i {
        echo " "
        j = j + 1
    }

    k = (size - i)*2-1
    while k > 0 {
        echo num
        num = num + 1
        k = k - 1
    }
    num = 1
    echo "\n"
    i = i + 1
} 
